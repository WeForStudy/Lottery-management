.flex {
 display: flex
}
.inline--block {
  display: inline-block
}
.block {
  display: block
}
.flex--1 {
  flex: 1
}
.flex--2 {
  flex: 2
}
.flex--3 {
  flex: 3
}
.flex--4 {
  flex: 4
}
.flex--5 {
  flex: 5
}
.flex--jcenter {
  justify-content: center
}
.flex--acenter {
  align-items: center
}
.flex--bcenter {
  justify-content: center
